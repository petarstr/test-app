<div class="row margin-top-50">
  <div class="offset-sm-2 col-sm-8">
    <div class="row">
      <div class="col-sm-10">
        <h2>Edit Project</h2>
      </div>
      <div class="col-sm-2">
        <%= button_to "Delete Project", @project, method: :delete, class: "btn btn-outline-danger" %>
      </div>
    </div>
    <hr>
    <%= link_to 'Add New Task', new_project_task_path(@project), class: "btn btn-outline-secondary" %>
    <hr>
    <%= render 'form', project: @project %>
  </div>
</div>
